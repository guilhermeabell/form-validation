<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prova UAM</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Insira suas informações</h1>

        <% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">×</span>
                    </button>
                  </div>
            <% }) %>
        <% } %>

        <form action="/processamento" method="POST">
            <div class="form-group">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="form-group">
                <label for="email" class="form-label">E-mail</label>
                <input type="text" class="form-control" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="phone" class="form-label">Número de ID</label>
                <input type="number" class="form-control" name="phone" id="phone">
            </div>
            <div class="form-group">
                <p name="cargo">Cargo</p>
                  <input type="radio" id="estagiario" name="cargo" value="Estagiário">
                  <label for="estagiario">Estagiário</label><br>
                  <input type="radio" id="diretor" name="cargo" value="diretor">
                  <label for="diretor">Diretor</label><br>
                  <input type="radio" id="supervisor" name="cargo" value="supervisor">
                  <label for="supervisor">Supervisor</label><br>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</body>
</html>